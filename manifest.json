{
  "manifest_version": 3,
  "name": "FB Content Blocker",
  "version": "1.0.0",
  "description": "Chặn hiển thị nội dung trên Facebook theo từ khóa",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["*://*.facebook.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
